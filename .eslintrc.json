{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["off", "single"],
    "no-useless-escape": ["off"],
    "no-useless-catch": ["off"],
    "no-undef": ["off"]
  }
}
